<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Movie App</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Movie List</h1>
      <a href="/add" class="btn btn-primary">Add Movie</a>
    </div>
    <div class="row mt-4">
      <% movies.forEach(movie => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <img src="/uploads/<%= movie.image %>" class="card-img-top" alt="Movie Image">
            <div class="card-body">
              <h5 class="card-title"><%= movie.name %></h5>
              <p class="card-text"><strong>Genre:</strong> <%= movie.genre %><br><strong>Rating:</strong> <%= movie.rating %></p>
              <a href="/movie/<%= movie._id %>" class="btn btn-outline-secondary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
